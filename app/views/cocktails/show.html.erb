<img src="<%= @cocktail.url %>" alt="<%= @cocktail.name %>">
<div class="container">
  <h1><%= @cocktail.name %></h1>
  <h3>Ingredients</h3>
  <ol>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= "#{dose.description} of #{dose.ingredient.name}" %>
        <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ol>
  <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail.id), class: "btn btn-danger" %>
  <%= link_to "View more cocktails", cocktails_path, class: "btn btn-primary" %>
</div>